<%- include('../partials/nav') %>

<main>
  <% if (profile.avatar) { %>
    <div>
      <img 
      class="profile-avatar" 
      src="<%= profile.avatar %>" 
      alt="<%= profile.name %> avatar"
      >
    </div>
  <% } %>
    <h1>It's <%= isSelf ? "you" : profile.name %>!</h1>
    <% if (isSelf) { %>
      <h2>Add yoo Deeds</h2>
      <form action="/profiles/<%= profile._id %>/details" method="POST">
        <label>
          Age of ur Soul:
          <input type="number" name="age" autocomplete="off">
        </label>
        <label>
          um wut makes u HAPPY?ðŸ˜Š
          <input type="text" name="happy" autocomplete="off">
        </label>
        <button type="submit">Add yoo Info</button>
      </form> 
    <% } %>
    <ul>
    <% profile.details.forEach(detail => { %>
      <h3>
        <li>My Fake age is: <%= detail.age %></li>
